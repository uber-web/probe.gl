{
  "name": "probe.gl-monorepo",
  "description": "JavaScript Console Instrumentation and Benchmarking for Browser and Node",
  "license": "MIT",
  "private": true,
  "keywords": [
    "javascript",
    "profiling",
    "instrumentation",
    "logging"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/probe.gl.git"
  },
  "workspaces": [
    "modules/*"
  ],
  "browser": {
    "jsdom": false
  },
  "scripts": {
    "bootstrap": "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true yarn && ocular-bootstrap",
    "clean": "ocular-clean",
    "build": "ocular-clean && lerna run pre-build && ocular-build &&  tsc -b tsconfig.build.json",
    "post-build": "ocular-clean && lerna run post-build",
    "lint": "tsc && ocular-lint",
    "publish": "ocular-publish",
    "test": "ocular-test",
    "test-fast": "ocular-test fast",
    "version": "ocular-build core"
  },
  "devDependencies": {
    "coveralls": "^2.13.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.10",
    "jsdoc-to-markdown": "^3.0.0",
    "jsdom": "^15.1.1",
    "ocular-dev-tools": "1.0.0-alpha.7",
    "pre-commit": "^1.2.2",
    "react-dom": "^16.13.1",
    "reify": "^0.18.1",
    "url-loader": "^1.0.1"
  },
  "pre-commit": [
    "test-fast"
  ],
  "dependencies": {}
}
